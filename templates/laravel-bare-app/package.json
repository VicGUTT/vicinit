{
    "private": true,
    "engines": {
        "node": ">=16"
    },
    "scripts": {
        "dev": "vite",
        "watch": "npm run dev",
        "preview": "vite preview",
        "prod": "vite build",
        "build": "npm run prod",
        "------------------------------------- | AUTO | -------------------------------------": "",
        "prepare": "npm run prod",
        "postinstall": "npm run init",
        "------------------------------------- | INIT | -------------------------------------": "",
        "init": "npm run init:husky",
        "init:husky": "husky install",
        "------------------------------------- | TEST | -------------------------------------": "",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "test:coverage": "vitest run --coverage",
        "test:watch:index": "vitest watch --testNamePattern=index",
        "test:watch:utils": "vitest watch --testNamePattern=^utils/",
        "test:watch:[filtered]": "vitest watch --testNamePattern=someTestName",
        "------------------------------------- | PLWR | -------------------------------------": "",
        "pw": "playwright test",
        "pw:[filtered]": "playwright test resources/tests/playwright/index.test.ts --project=chromium",
        "------------------------------------- | LINT | -------------------------------------": "",
        "lint": "eslint . --max-warnings=0",
        "lint:src": "eslint ./src --max-warnings=0",
        "lint:tests": "eslint ./tests --max-warnings=0",
        "fix": "eslint . --max-warnings=0 --fix",
        "fix:src": "eslint ./src --max-warnings=0 --fix",
        "fix:tests": "eslint ./tests --max-warnings=0 --fix",
        "------------------------------------- | CUTE | -------------------------------------": "",
        "format": "prettier **/*.{ts,js,json,html,yml,md,css,vue} -l",
        "format:fix": "prettier **/*.{ts,js,json,html,yml,md,css,vue} --write"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "@kitql/vite-plugin-watch-and-run": "^0.4.2",
        "@playwright/test": "^1.24.2",
        "@tailwindcss/aspect-ratio": "^0.4.0",
        "@tailwindcss/forms": "^0.5.0",
        "@tailwindcss/line-clamp": "^0.4.0",
        "@tailwindcss/typography": "^0.5.2",
        "@types/node": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "^5.18.0",
        "@typescript-eslint/parser": "^5.18.0",
        "@vicgutt/tailwindcss-debug": "^0.1.0",
        "@vicgutt/tailwindcss-feature-detection": "^0.1.0",
        "@vicgutt/tailwindcss-font-face": "^0.2.0",
        "autoprefixer": "^10.4.7",
        "c8": "^7.12.0",
        "eslint": "^8.13.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-jsonc": "^2.2.1",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^8.0.1",
        "laravel-vite-plugin": "^0.5.0",
        "lint-staged": "^13.0.3",
        "postcss": "^8.4.14",
        "prettier": "^2.6.2",
        "tailwindcss": "^3.1.6",
        "tslib": "^2.4.0",
        "typescript": "^4.6.3",
        "vite": "^3.0.5",
        "vitest": "^0.21.1"
    },
    "dependencies": {
        "@vicgutt/isjs": "^0.1.5",
        "@vicgutt/macrojs": "^0.1.0",
        "@vicgutt/strjs": "^0.1.2"
    }
}
